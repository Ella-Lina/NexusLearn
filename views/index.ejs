<%- include('partials/header', { title: 'Home' }) %>
<section aria-labelledby="welcome">
  <section class="hero-landscape">
    <img src="/images/cube.jpg" alt="Hero Image" class="hero-image" />
    <div class="hero-overlay">
      <h1>NexusLearn</h1>
      <p>
        Welcome to NexusLearn, your gateway to knowledge! Discover a wide range
        of courses, connect with expert instructors, and learn at your own pace.
      </p>
      <form action="/courses" method="GET" class="hero-search">
        <input type="text" name="q" placeholder="Search courses..." />
      </form>
    </div>
  </section>
  <section aria-labelledby="courses">
    <h2 id="courses">Featured Courses</h2>
    <div class="card-container">
      <% courses.forEach(course => { %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <img src="<%= course.image %>" alt="<%= course.name %>" />
            <h3><%= course.name %></h3>
          </div>
          <div class="flip-card-back">
            <img
              src="<%= course.instructorImage || '/images/instructors/default.jpg' %>"
              alt="<%= course.instructor %>"
              class="instructor-image-static"
            />
            <h3><%= course.instructor %></h3>
            <p><strong>Duration:</strong> <%= course.duration %></p>
            <p><%= course.description %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
</section>
<%- include('partials/footer') %>

<%- include('partials/header', { title: 'Home' }) %>
<section aria-labelledby="welcome">
  <section class="welcome-section">
    <div class="welcome-overlay">
      <h1 class="site-title" id="welcome">NexusLearn</h1>
      <div class="hero-image">
        <img src="/images/cube.jpg" alt="NexusLearn Banner" />
      </div>
      <p class="welcome-intro">
        Welcome to NexusLearn, your gateway to knowledge! Discover a wide range
        of courses, connect with expert instructors, and learn at your own pace.
        Whether you're exploring new skills or mastering a passion, we're here
        to help you grow anytime, anywhere.
      </p>
    </div>
  </section>
  <section aria-labelledby="courses">
    <h2 id="courses">Featured Courses</h2>
    <div class="card-container">
      <% courses.forEach(course => { %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <img src="<%= course.image %>" alt="<%= course.name %>" />
            <h3><%= course.name %></h3>
          </div>
          <div class="flip-card-back">
            <img
              src="<%= course.instructorImage || '/images/instructors/default.jpg' %>"
              alt="<%= course.instructor %>"
              class="instructor-image-static"
            />
            <h3><%= course.instructor %></h3>
            <p><strong>Duration:</strong> <%= course.duration %></p>
            <p><%= course.description %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
</section>
<%- include('partials/footer') %>
